<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--点击背景-->
    <item android:state_pressed="true">
        <shape>
            <!--色值-->
            <solid android:color="#888888" />
            <!--圆角-->
            <corners android:radius="1dp" />
        </shape>
    </item>
    <!--默认背景-->
    <item>
        <shape>
            <solid android:color="#888888" />
            <corners android:radius="1dp" />
        </shape>
    </item>
</selector>